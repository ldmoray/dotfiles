#!/bin/bash

#This projected is licensed under the terms of the MIT license.
#Copyright (c) 2014 Lenny Morayniss

#switches environments of python scripts
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
FILES="$DIR"/*
COR="$( which python )"
for f in $FILES; do
	head -n 1 $f | grep python > /dev/null 
	RETVAL=$?
	if [[ $RETVAL == 0 ]]; then
		sed -i "" "1 s?.*?#!${COR}?" $f 
	fi
done
